<header class="py-4 mb-8 border-b bg-white">
  <div class="container mx-auto flex justify-between items-center">
    <a class="p-2 text-2xl text-gray-800" href="/">Tracker</a>
    <% if(!user) { %>
    <nav>
      <ul class="flex justify-between items-center space-x-8">
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/register"
            >Register</a
          >
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/login">Login</a>
        </li>
      </ul>
    </nav>
    <% } else { %>
    <nav>
      <ul class="flex justify-between items-center space-x-8">
        <p><%=user.name%></p>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/dashboards"
            >Dashboard</a
          >
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/incomes/new"
            >Add Income</a
          >
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/expenses/new"
            >Add Expense</a
          >
        </li>
        <li>
          <a class="hover:border-b-2 border-sky-500 p-2" href="/logout"
            >Logout</a
          >
        </li>
      </ul>
    </nav>
    <% } %>
  </div>
</header>
